#!/bin/sh

set -e
[ -n "$DEBUG" ] && set -ex

bundles="
  git://github.com:AndrewRadev/splitjoin.vim
  git://github.com:LnL7/vim-nix
  git://github.com:dense-analysis/ale
  git://github.com:direnv/direnv.vim
  git://github.com:junegunn/fzf.vim
  git://github.com:pbrisbin/vim-mkdir
  git://github.com:teoljungberg/vim-whitescale
  git://github.com:tommcdo/vim-exchange
  git://github.com:tpope/vim-abolish
  git://github.com:tpope/vim-bundler
  git://github.com:tpope/vim-commentary
  git://github.com:tpope/vim-dispatch
  git://github.com:tpope/vim-endwise
  git://github.com:tpope/vim-eunuch
  git://github.com:tpope/vim-fugitive
  git://github.com:tpope/vim-git
  git://github.com:tpope/vim-markdown
  git://github.com:tpope/vim-projectionist
  git://github.com:tpope/vim-rails
  git://github.com:tpope/vim-rake
  git://github.com:tpope/vim-repeat
  git://github.com:tpope/vim-rhubarb
  git://github.com:tpope/vim-scriptease
  git://github.com:tpope/vim-sleuth
  git://github.com:tpope/vim-surround
  git://github.com:tpope/vim-unimpaired
  git://github.com:tpope/vim-vinegar
  git://github.com:vim-ruby/vim-ruby
"

find_upstream() {
  if git -C "$work_tree_path" branch | grep -q "main"; then
    echo "main"
  elif git -C "$work_tree_path" branch | grep -q "master"; then
    echo "master"
  else
    echo >&1 "No upstream can be found for '$work_tree_path'"
    exit 1
  fi
}

display_new_commits() {
  work_tree_path="$1"
  upstream=$(find_upstream)
  current_sha="$(git -C "$work_tree_path" rev-parse --short HEAD)"
  new_sha="$(git -C "$work_tree_path" rev-parse --short "origin/$upstream")"
  current_branch="$(git -C "$work_tree_path" symbolic-ref --short HEAD)"
  remote="$(git -C "$work_tree_path" remote show -n origin | grep "Fetch URL")"

  if [ "$current_branch" = "$upstream" ] && [ "$current_sha" != "$new_sha" ]; then
    sha_range="$current_sha...$new_sha"

    if echo "$remote" | grep -q github; then
      url="$(
        git -C "$work_tree_path" config remote.origin.url | \
        sed 's|^git:|https:|' \
      )"

      echo "$url/compare/$sha_range"
    else
      git -C "$work_tree_path" --no-pager log --oneline "$sha_range"
    fi
  fi
}

for bundle in ${bundles}; do
  bundle_name="$(echo "$bundle" | cut -d "/" -f 2)"
  vim_bundle="$HOME/.vim/pack/bundle/start/$bundle_name"

  if [ ! -d "$vim_bundle" ]; then
    git clone "$bundle" "$vim_bundle"
  fi
done

find "$HOME/.vim/pack/bundle" -type d -name ".git" | while read -r path; do
  path="${path%/.git}"
  did_stash="0"

  if [ -n "$(git -C "$path" remote)" ]; then
    git -C "$path" fetch -q origin

    display_new_commits "$path"

    if [ -n "$(git -C "$path" status --porcelain)" ]; then
      git -C "$path" stash push -q 1> /dev/null 2> /dev/null
      did_stash="1"
    fi

    git -C "$path" rebase -q "origin/$(find_upstream)" > /dev/null

    if [ "$did_stash" = "1" ]; then
      git -C "$path" stash pop -q 1> /dev/null 2> /dev/null
    fi
  fi
done

nohup vim -u NONE -c "helptags ALL" -cq >/dev/null 2>&1 </dev/null &
