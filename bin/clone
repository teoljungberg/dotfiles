#!/bin/sh

set -e
[ -n "$DEBUG" ] && set -ex

usage() {
  echo "Usage: clone teoljungberg/dotfiles"
  echo "       clone git@github.com:teoljungberg/dotfiles"
  echo "       clone git://github.com/teoljungberg/dotfiles"
  echo "       clone https://github.com/teoljungberg/dotfiles"
}

if [ -z "$1" ]; then
  usage
  exit 1
else
  ghq get --no-recursive "$@"
fi
