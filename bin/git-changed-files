#!/bin/sh

set -e
[ -n "$DEBUG" ] && set -ex

git_initial_branch() {
  branches="(master|main)"

  if git branch | grep -qEo "$branches"; then
    git branch | grep -Eo "$branches" | head -n 1
  else
    exit 1
  fi
}

if [ -n "$(git status --porcelain)" ]; then
  git status --porcelain | cut -c 4-
else
  git diff "origin/$(git_initial_branch)..HEAD" \
    --name-status \
    --diff-filter=d |
    cut -f 2
fi
